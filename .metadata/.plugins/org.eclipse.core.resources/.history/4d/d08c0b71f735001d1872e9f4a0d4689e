
public class TipoPontoFlutuante {
	public static void main(String[] args) {
		
		double salario = 1250.7;
		System.out.println("O salário é de " + salario);
		
		double divisao = 3.14 / 2;
		System.out.println(divisao);
		
		int outraDivisao = 5 / 2;
		System.out.println(outraDivisao);
		
		double divisaoDeInteiros = 5 / 2; // primeiro ele realiza a divisão, 
		// para depois armazenar na variavel do tipo double. Como os dois números são inteiros, ele
		// entende que o resultado também será do tipo int
		System.out.println(divisaoDeInteiros);
		
		double divisaoComDouble = 5.0 / 2;
		
		
		
	}

}
